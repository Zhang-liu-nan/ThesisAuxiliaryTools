.userinfo {
  display: flex;
  flex-direction: column;
  align-items: left;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.title {
  font-size: 30px;
  font-weight: bold;
  color: rgb(14, 2, 2);
  text-decoration:underline; 
} 


.image {
  width: 830rpx;
}



.child { 
  position: absolute;
  left: 0;
  top: 0;
  margin: auto;
  text-align: left;
}


 
.header {
    margin: 90rpx 0 90rpx 50rpx;
    border-bottom: 1px solid #ccc;
    text-align: center;
    width: 650rpx;
    height: 300rpx;
    line-height: 450rpx;
}
 
.header image {
    width: 200rpx;
    height: 200rpx;
}
 
.content {
    margin-left: 50rpx;
    margin-bottom: 90rpx;
}
 
.content text {
    display: block;
    color: #9d9d9d;
    margin-top: 40rpx;
}
 
.bottom {
    border-radius: 80rpx;
    margin: 70rpx 50rpx;
    font-size: 35rpx;
}

 
.lunbo{
  width: 100%
}


.lunbo image{
  width: 100%
}

swiper{
  width:100%;
  height:430rpx;
}

.notify-item{
  width: 700rpx;
  padding: 30rpx 0 20rpx 0;
  margin-left: 20rpx;
  margin-right: 30rpx;
  border-bottom: 1px solid #e2e2e2;
}
.notify-item .avatar{
  flex: 1;
}
.notify-item image{
  width: 160rpx;
  height: 120rpx;
}
.notify-item .notify-content{
  flex: 3;
  text-align: left;
}
.notify-item .notify-content text{
  display: block;
}
.notify-item .notify-content .notify-title{
  color: #000;
  font-size: 32rpx;
  line-height: 50rpx;
  font-weight: 400;
  width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  margin-left: 20rpx;
  padding-bottom: 5rpx;
}
.notify-item .notify-content  .notity-detail{
  color: #999;
  font-size: 26rpx;
  line-height: 34rpx; 
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  margin-left: 20rpx;
}
.notity-date{
  color: #000;
  font-size: 25rpx;
  line-height: 50rpx;
  font-weight: 400;
  width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  margin-left: 20rpx;
  padding-bottom: 5rpx;
}