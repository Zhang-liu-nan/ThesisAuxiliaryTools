.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.3;
  overflow: hidden;
  z-index: 9000;
  color: #fff;
}

.modal-dialog {
  top: 0;
  left: 0;
  width: 100%;
  /* height: 100%; */
  overflow: hidden;
  position: fixed;
  z-index: 9999;
  display: flex;
  flex-flow: row;
  justify-content: space-between;
  align-items: center;
  
}
.modal-content {
  width: 80%; 
  max-height: 80%;
  margin: 20rpx auto;
  padding:15rpx;
  border-radius: 36rpx;
  background-color: white;
  text-align: left;
}
.modal-title {
  padding-top: 5rpx;
  font-size: 36rpx;
  color: #030303;
  text-align: center;
}





