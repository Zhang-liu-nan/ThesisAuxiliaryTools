.detail{
    display: block;
}
.detail-box{
    margin-top: 51rpx;
    padding: 0 20rpx;
}
.title{
    display: block;
    font-size: 48rpx;
    color: #000;
    margin-bottom: 10rpx;
    font-weight: 600;
}
.time{
    display: inline;
    font-size: 30rpx;
    color: #888;
}

.contactMeBtn{
    font-size: 29rpx;
    color:#09bb07;
    vertical-align:middle;
    margin-left: 20rpx;
}

.content{
      border-top: 2rpx gray solid;
      padding:10px 0 0 0 ;
    margin: 10rpx 30rpx 0 30rpx;
}
.content image{
    display: block;
    width: 100%;
    height: 360rpx;
}
.content text{
    display: block;
    font-size: 34rpx;
    color: #111;
    line-height: 50rpx;
    margin: 20rpx 0 60rpx 0;
}
.hover-btn{
  position: fixed;
  left: 20rpx;
  bottom:20rpx;
  width: 150rpx;
  height: 150rpx;
}
.hover-btn image{
  width: 150rpx;
  height: 150rpx;
}
.modal-avatar{
  width: 400rpx;
  height: 400rpx;
  display: block;
  margin: 0 auto;
}

.contactMe{
  padding-top: 15rpx;
  color: red;
}
